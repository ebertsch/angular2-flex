{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "es2015", "dom"],
    "mapRoot": "/",
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "outDir": "../../dist/",
    "sourceMap": true,
    "target": "es5",
    "stripInternal": true,
    "baseUrl": "",
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "paths": {
      "angular2-flex": [
        "../../dist/angular2-flex"
      ]
    },
    "types": [
      "hammerjs"
    ]
  },
  "angularCompilerOptions": {
    "genDir": "../../dist",
    "skipTemplateCodegen": true,
    "debug": true
  }
}
